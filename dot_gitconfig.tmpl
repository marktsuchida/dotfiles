{{- /* vim: set filetype=gitconfig: */ -}}
[color]
	ui = auto
[credential]
{{- if (or (eq .chezmoi.os "darwin")
           (eq .chezmoi.os "windows")) }}
	helper =
	helper = manager
{{- else }}
	helper = cache --timeout=7200
{{- end }}
[merge]
	conflictstyle = diff3
	tool = vimdiff
	guitool = gvimdiff
[push]
	default = simple
[pull]
	ff = only
[diff]
	dirstat = files,0
	tool = difftastic
	guitool = gvimdiff
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft --display=inline --syntax-highlight=off "$LOCAL" "$REMOTE"
[pager]
	difftool = true
[alias]
	dft = difftool
	graph = log --graph
[hub]
	protocol = https
[init]
	defaultBranch = main
[user]
	useConfigOnly = true
[rebase]
	autosquash = true

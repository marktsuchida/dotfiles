{
  "alwaysThinkingEnabled": false,

  "hooks": {
{{- if eq .chezmoi.os "darwin" }}
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Stopped\" with title \"Claude Code\"'"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/bin/claude-notify-macos"
          }
        ]
      }
    ]
{{- end }}
  },

  "statusLine": {
    "type": "command",
    "command": "pwd"
  }
}

{
  "permissions": {
    "deny": [
      "Edit(.git/**)",
      "Write(.git/**)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
{{- if eq .chezmoi.os "darwin" }}
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/bin/notify \"Claude Code\" Stopped"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/bin/claude-notify-macos"
          }
        ]
      }
    ]
{{- end }}
  },
  "statusLine": {
    "type": "command",
    "command": "bash -c ~/.claude/statusline.sh"
  },
  "spinnerTipsEnabled": false,
  "alwaysThinkingEnabled": true,
  "promptSuggestionEnabled": false,
  "autoUpdatesChannel": "stable",
  "minimumVersion": "2.1.41"
}

{{- /* vim: set filetype=bash: */ -}}

alias grep='command grep --color=auto'
alias fgrep='command fgrep --color=auto'
alias egrep='command egrep --color=auto'


# TODO Debian/Ubuntu have lesspipe(1). It would be nice to set up if it can be
# combined with the source-highlight pipe.


# Bash completions
if ! shopt -oq posix; then
  if [ -f /usr/share/bash-completion/bash_completion ]; then
    . /usr/share/bash-completion/bash_completion
  elif [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
  fi
fi


# Where pip installs user-installed scripts
append_if_not_in_path "$HOME/.local/bin"
